.TH "schedule_hrtimeout_range_clock" 9 "schedule_hrtimeout_range_clock" "May 2021" "Kernel Hacker's Manual" LINUX
.SH NAME
schedule_hrtimeout_range_clock \- sleep until timeout
.SH SYNOPSIS
.B "int" schedule_hrtimeout_range_clock
.BI "(ktime_t *expires "  ","
.BI "u64 delta "  ","
.BI "const enum hrtimer_mode mode "  ","
.BI "clockid_t clock_id "  ");"
.SH ARGUMENTS
.IP "expires" 12
timeout value (ktime_t)
.IP "delta" 12
slack in expires timeout (ktime_t)
.IP "mode" 12
timer mode
.IP "clock_id" 12
timer clock to be used
