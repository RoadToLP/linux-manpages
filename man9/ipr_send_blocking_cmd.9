.B "void" ipr_send_blocking_cmd
.BI "(struct ipr_cmnd *ipr_cmd "  ","
.BI "void (*timeout_func) (struct timer_list *) "  ","
.BI "u32 timeout "  ");"
.SH ARGUMENTS
.IP "ipr_cmd" 12
ipr command struct
.IP "timeout_func" 12
function to invoke if command times out
.IP "timeout" 12
timeout
.SH "DESCRIPTION"
Return value:
none
