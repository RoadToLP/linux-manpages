.SH SYNOPSIS
.B "int" stm32_spi_transfer_one_setup
.BI "(struct stm32_spi *spi "  ","
.BI "struct spi_device *spi_dev "  ","
.BI "struct spi_transfer *transfer "  ");"
.SH ARGUMENTS
.IP "spi" 12
pointer to the spi controller data structure
.IP "spi_dev" 12
pointer to the spi device
.IP "transfer" 12
pointer to spi transfer
