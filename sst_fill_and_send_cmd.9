.SH SYNOPSIS
.B "int" sst_fill_and_send_cmd
.BI "(struct sst_data *drv "  ","
.BI "u8 ipc_msg "  ","
.BI "u8 block "  ","
.BI "u8 task_id "  ","
.BI "u8 pipe_id "  ","
.BI "void *cmd_data "  ","
.BI "u16 len "  ");"
.SH ARGUMENTS
.IP "drv" 12
sst_data
.IP "ipc_msg" 12
type of IPC (CMD, SET_PARAMS, GET_PARAMS)
.IP "block" 12
block index
.IP "task_id" 12
task index
.IP "pipe_id" 12
pipe index
.IP "cmd_data" 12
the IPC payload
.IP "len" 12
length of data to be sent
